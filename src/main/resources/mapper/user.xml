<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.happyhouse.model.repo.MemberRepo">

	<insert id="insert" parameterType="Member">
		insert into member values(#{id}, #{password}, #{name}, #{address}, #{tel})
	</insert>
	
	
	<update id="update" parameterType="Member">
		update member set name=#{name}, address=#{address}, tel=#{tel}, happiness=#{happiness}, money=#{money}
		where id=#{id}
	</update>
	
	<update id="modifyPassword" parameterType="String">
		update member set password = #{password}
		where id=#{id}
	</update>
	
	<select id="select" parameterType="string" resultType="Member">
		select * from member where id=#{id}
	</select>
	
	<delete id="delete" parameterType="string">
		delete from member where id=#{id}
	</delete>
	
	<select id="selectAll" resultType="Member">
		select * from member order by id
	</select>
</mapper>